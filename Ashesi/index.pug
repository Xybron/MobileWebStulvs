                .fullpage#pageContent
                    .row
                        p.hum
                         i.fa.fa-bars(aria-hidden="true", onclick = 'openSideNav()')

                        .container.logoHolder
                            img(src = 'assets/images/logo.jpg')
                    .row
                        .one-half.column
                            .container
                            i.fa.fa-long-arrow-left(aria-hidden="true", onclick = 'closeDepartmentPage()')
                        .one-half.column
                            .container
                                i.fa.fa-gratipay(aria-hidden="true")
                    .row
                        .container
                            h1 Name of Department
