                        .container
                            h4.subTitle Courses
                    .row
                        .slideX
                            div.xCard
                                .imgHolder#pic1
                                .description
                                    .container
                                        h4 Computer Science
                                        p Explore 
                                            i.fa.fa-long-arrow-right(aria-hidden="true")
                            div.xCard
                                .imgHolder#pic2
                                .description
                                    .container
                                        h4 Electrical Engineering
                                        p Explore 
