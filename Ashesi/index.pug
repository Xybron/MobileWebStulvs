                                .imgHolder#pic4
                                .description
                                    .container
                                        h4 Business Admininstration
                                        p Explore 
                                            i.fa.fa-long-arrow-right(aria-hidden="true")
                                            
                            
                            
                             
                              
                .fullpage#pageThumbBG
        section.fullpage#coursePage
         

            .row
                p.hum
                    i.fa.fa-bars(aria-hidden="true", onclick = 'openSideNav()')
                .one-half.column
                    .container
                         i.fa.fa-long-arrow-left(aria-hidden="true", onclick = 'closeCoursePage()')
                .one-half.column
                    .container
                        i.fa.fa-share-alt(aria-hidden="true")
            .row
                .container.logoHolder
                    img(src = 'assets/images/logo.jpg')
