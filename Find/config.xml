<?xml version='1.0' encoding='utf-8'?>
<widget id="org.apache.cordova.find" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Find</name>
    <description>
        Finds you and your friends.
    </description>
    <author email="ronaldnettey360@gmail.com" href="http://genese.io">
        Ronald Nettey
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icon/android/icon/drawable-ldpi-icon.png" />
        <icon density="mdpi" src="res/icon/android/icon/drawable-mdpi-icon.png" />
        <icon density="hdpi" src="res/icon/android/icon/drawable-hdpi-icon.png" />
        <icon density="xhdpi" src="res/icon/android/icon/drawable-xhdpi-icon.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-geolocation" spec="^2.4.3" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <engine name="android" spec="~5.0.0" />
</widget>
